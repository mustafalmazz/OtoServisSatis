<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OtoServisSatis.WebUI</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OtoServisSatis.WebUI.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        html, body {
            height: 100%;
        }

        body {
            background-color: #121212;
            color: #f5f5f5;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .navbar-nav .nav-item {
            margin-right: 20px;
        }

        a.nav-link, .navbar-brand {
            color: #7CFC00 !important;
        }

            a.nav-link:hover {
                color: #66cc00 !important;
            }

        .btn-warning, .btn-outline-warning {
            background-color: #7CFC00;
            border-color: #7CFC00;
        }

            .btn-warning:hover, .btn-outline-warning:hover {
                background-color: #66cc00;
                border-color: #66cc00;
                color: #121212;
            }

        .btn-outline-primary {
            border-color: #7CFC00;
            color: #7CFC00;
        }

            .btn-outline-primary:hover {
                background-color: #66cc00;
                border-color: #66cc00;
                color: #fff;
            }

        .card {
            background-color: #2C2C2C;
            color: #f5f5f5;
        }

        .card-body, .card-footer {
            background-color: #333333;
        }

        .card-img-top {
            border-radius: 0.5rem;
        }

        .navbar {
            background-color: #121212;
        }

        .footer {
            background-color: #121212;
            color: #f5f5f5;
        }

            .footer a {
                color: #7CFC00;
            }

                .footer a:hover {
                    color: #66cc00;
                }

        .form-control {
            background-color: #333333;
            color: #f5f5f5;
            border-color: #7CFC00;
        }

            .form-control::placeholder {
                color: #7CFC00;
            }

        .input-group-text {
            background-color: #7CFC00;
            border: none;
        }

            .input-group-text i {
                color: black;
            }

        .form-control {
            border-left: none;
        }

        .social-icons i {
            margin-right: 10px;
            font-size: 1.5rem;
        }

        /* Sosyal medya linkleri için alt çizgi kaldırma */
        a.text-dark {
            text-decoration: none; /* Alt çizgiyi kaldır */
        }

            a.text-dark:hover {
                text-decoration: none; /* Hover durumunda da alt çizgi kaldır */
            }

        /* Footerda sosyal medya ikonları */
        .footer .social-icons {
            font-size: 24px;
            display: flex;
            gap: 15px;
        }

        /* Mobil uyumlu stiller */
        @@media (max-width: 768px) {
            .social-icons i

        {
            font-size: 1.25rem;
        }

        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-car" style="color: #7CFC00;"></i>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Arac" asp-action="List">Tüm Araçlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Favorites" asp-action="Index">Favorilerim</a>
                        </li>
                    </ul>
                </div>
                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search" asp-action="Ara" asp-controller="Arac" method="get">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input name="q" type="search" class="form-control" placeholder="Ara..." aria-label="Search">
                    </div>
                </form>
                <div class="text-end">
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Index" class="btn btn-warning me-2">Hesabım</a>
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-warning">Oturumu Kapat</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-warning me-2">Giriş Yap</a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-warning">Kaydol</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @Html.Raw(TempData["Message"])
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="text-dark py-4 mt-auto" style="background-color: #7CFC00;">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-1">
                    <h5 class="fw-bold">OtoSatış.com</h5>
                    <p>© 2025 - Tüm hakları saklıdır.<br /><small>(Bu site eğitim amaçlıdır.)</small></p>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold">Bağlantılar</h6>
                    <ul class="list-unstyled">
                        <li><a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li><a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a></li>
                        <li><a class="text-dark text-decoration-none" href="mailto:mustafaalmaz@ogr.bandirma.edu.tr">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold">Bizi Takip Edin</h6>
                    <div class="social-icons">
                        <a href="https://www.instagram.com/mustafalmazz/" class="text-dark me-2" target="_blank">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="https://www.linkedin.com/in/mustafa-a-845923251" class="text-dark me-2" target="_blank">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="https://github.com/mustafalmazz" class="text-dark me-2" target="_blank">
                            <i class="bi bi-github"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold">Bize Ulaşın</h6>
                    <p><a href="mailto:mustafaalmaz@ogr.bandirma.edu.tr" class="text-dark text-decoration-none">mustafaalmaz@ogr.bandirma.edu.tr</a></p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
