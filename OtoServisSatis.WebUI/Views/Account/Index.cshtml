@model Kullanici
@{
    ViewData["Title"] = "Kullanıcı Bilgilerim";
}

<style>
    .custom-form-control {
        border: 1px solid #7CFC00;
        border-radius: 5px;
        background-color: #2C2C2C;
        color: #f5f5f5;
    }

    .custom-btn {
        background-color: #7CFC00;
        color: black;
        border: none;
        border-radius: 5px;
        padding: 6px 20px;
        font-weight: bold;
    }

        .custom-btn:hover {
            background-color: #66cc00;
            color: #121212;
        }

    label {
        color: #f5f5f5;
    }
</style>

<h1 style="color:#7CFC00; font-size:50px">Kullanıcı Bilgilerim</h1>
<hr style="color:#7CFC00;" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="UserUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EklenmeTarihi" />
            <input type="hidden" asp-for="UserGuid" />
            <input type="hidden" asp-for="RolId" />

            <div class="form-group">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control custom-form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Soyadi" class="control-label"></label>
                <input asp-for="Soyadi" class="form-control custom-form-control" />
                <span asp-validation-for="Soyadi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control custom-form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control custom-form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sifre" class="control-label"></label>
                <input asp-for="Sifre" class="form-control custom-form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label" style="color:#f5f5f5;">
                    <input class="form-check-input" asp-for="AktifMi" /> @Html.DisplayNameFor(model => model.AktifMi)
                </label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="custom-btn" />
            </div>
        </form>
    </div>
</div>
