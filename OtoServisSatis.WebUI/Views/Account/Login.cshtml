@model CustomerLoginViewModel

@{
    ViewData["Title"] = "Üye Girişi";
}

<style>
    .custom-form-control {
        border: 1px solid #7CFC00;
        border-radius: 5px;
        background-color: #2C2C2C;
        color: #f5f5f5;
        box-sizing: border-box;
    }

        .custom-form-control::placeholder {
            color: #7CFC00;
        }

    .custom-btn {
        background-color: #7CFC00;
        color: black;
        border: none;
        border-radius: 5px;
        padding: 6px 20px;
        font-weight: bold;
    }

        .custom-btn:hover {
            background-color: #66cc00;
            color: #121212;
        }
</style>

<h1 style="color: white;">Üye Girişi</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label" style="color: #f5f5f5;"></label>
                <input asp-for="Email" class="form-control custom-form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sifre" class="control-label" style="color: #f5f5f5;"></label>
                <input asp-for="Sifre" class="form-control custom-form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Giriş" class="custom-btn" />
            </div>
        </form>
    </div>
</div>
